.Example-work-section {

  &__content {
    padding 5rem;
    display flex;
    flex-direction row;
    justify-content center;
  }

  &__img {
    content url("/assets/test-png.png");
    width auto;
    max-height 20rem;
    min-height 5rem;
  }

  &__text {
    margin-left 5rem;
    color white;
    text-align left;
    max-width 30rem;

    &__description-header {
      font-size 2.5rem;
      font-weight 600;
    }

    &__description {
      font-size 1.25rem;
      margin-top 1.5rem;
      font-weight normal;
    }
  }
}