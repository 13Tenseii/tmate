.Dropdown {
  position: relative;
  display: inline-block;

  &__btn {
    @extend .no-select;
    background-color: inherit;
    color: white;
    padding: 0.3rem;
    font-size: 16px;
    border: 3px solid $pink;
    cursor: pointer;
    border-radius 0.5rem;

    &:hover {
      background-color $darkestColor;
    }

    &-active {
      background-color $darkestColor;
      border-bottom-left-radius 0;
      border-bottom-right-radius 0;
      border-bottom none;
    }
  }

  &__menu {
    @extend .no-select;
    display none;
    background-color $darkNotDarkest;
    color white;
    position absolute;
    overflow auto;
    z-index 10;
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
    width 100%;
    border-bottom-left-radius 0.5rem;
    border-bottom-right-radius 0.5rem;
    border 3px solid $pink;
    border-top none;

    &-active {
      display flex;
      flex-direction column;
      align-items center;
      text-align center;
    }

    &__item {
      color white;
      text-decoration none;
      display block;
      width 100%;

      &:hover {
        background-color $darkestColor;
      }
    }
  }


}