.Dropdown {
  position: relative;
  display: inline-block;

  &__btn {
    background-color: white;
    color black;
  }

  &__menu {
    background-color white;
    color black;
    display none;
    position absolute;
    overflow auto;
    border 1px solid black;
    z-index 10;

    &__active {
      display block;
    }

    &__item {
      color black;
      text-decoration none;
      display block;

      &:hover {
        background-color #ddd;
      }
    }
  }


}