.Info-section {
  background $darkestColor;
  min-height 40rem;
  display flex;
  flex-direction column;

  &__header {
    color white;
    width 40%;
    left 31%;
    position: absolute;
    text-align center;
    margin-top 3rem;
    font-size 1.7rem;
  }

  &__section {
    margin-top 10rem;
    height 30rem;
    width 100%;
  }

  &__work-section {
    @extend .Info-section__section;
  }

  &__players-online-section {
    @extend .Info-section__section;
  }
}