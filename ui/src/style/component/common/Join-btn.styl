.Join-btn {
  display flex;
  justify-content center;
  cursor pointer;
  color black;
  background-color white;
  border-radius 2rem;
  text-align center;
  padding 0.5rem;
  font-weight bold;
  font-size 1.25rem;

  &:hover {
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.4);
    transition: all 0.7s ease 0s;
  }
}