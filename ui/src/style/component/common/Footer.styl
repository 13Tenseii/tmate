.Footer {
  display flex;
  flex-direction row;
  background $darkestColor;
  border-top 2px solid white;
  height 10rem;

  &__links {
    display flex;
    flex-direction column;
    margin 3rem;
  }

  &__link {
    color white !important;
    font-size 1rem;
    margin 1rem;
    cursor pointer;
  }
}