{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "removeComments": true,
    "noEmitHelpers": true,
    "jsx": "react",
    "outDir": "target",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "target"
  ]
}